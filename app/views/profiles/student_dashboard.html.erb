<span>
    <h1 class=""><%= @user.name %>'s Dashboard
    </h1>

    <table class="table">
        <tr>
            <th class="">Name</th>
            <th>Duration</th>
            <th>Status</th>
            <th></th>
            <th></th>
        </tr>

        <% @tests.each do |test| %>
        <tr>
            <td><%= test.name %></td>
            <td><%= test.duration%></td>
            <% if @enrolled_test.include? test.id%>
            <td  style="margin:10px;" class="btn btn-danger">
                Take Test</td>
            <%else%>
            <td   style="margin:10px;" class="btn btn-success">
                Enroll</td>
            <% end %>
        </tr>
        <% end %>
    </table>
