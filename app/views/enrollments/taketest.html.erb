<div class="panel panel-default">
    <div class="panel-heading">
        <h3><%= @current_test.name %></h3>

    </div>

    <div class="panel-body">

        <div class="col-lg-4 col-sm-4">
            <table class="table border-right">
                <thead>
                    <tr>
                        <th>Question</th>

                    </tr>
                </thead>
                <tbody>
                    <% @questions.each do |question| %>

                    <tr>
                        <td>
                            <strong><%= link_to question.question ,show_current_question_path(question),remote: true %></strong>
                        </td>
                    </tr>
                    <%- end %>
                </tbody>

            </table>

        </div>

        <div class="col-lg-8">
            <div id="div_with_current_que">
                <%= render 'current_selected_question', current_que: @current_question %>
            </div>

        </div>

    </div>

    <div class="panel-footer">
      <h3 class ="btn btn-success pull-right"> Finish Test</h3>
    </div>

</div>
