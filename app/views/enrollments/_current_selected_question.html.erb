<div class="">

  <%= current_question.question %>
  <!-- <%= params[:test_id]%> -->
  <%= form_tag(submit_clicked_path,remote:true) %>
  <%= hidden_field(:question,:id,:value=>current_question[:id])%>
  <%= hidden_field(:test,:id,:value=>@current_test.id)%>
  <%- if current_question.question_type.to_i == 0 %>
          <%=number_field_tag "response" %>

  <%- elsif current_question.question_type.to_i == 1 %>

      <%= radio_button_tag("response","A") %>
      <label for="">
        <%= current_question.options[0] %>
      </label>
      <br>

      <%= radio_button_tag("response","B") %>
      <label for="">
        <%= current_question.options[1] %>
      </label>
      <br>

      <%= radio_button_tag("response","C") %>
      <label for="">
        <%= current_question.options[2] %>
      </label>
      <br>

      <%= radio_button_tag("response","D") %>
      <label for="">
        <%= current_question.options[3] %>
      </label>
      <br>

  <%- else %>
      <%=check_box_tag("response[]","A")%>
      <label for="">
        <%= current_question.options[0] %>
      </label>
      <br>

      <%=check_box_tag("response[]","B")%>
      <label for="">
        <%= current_question.options[1] %>
      </label>
      <br>

      <%=check_box_tag("response[]","C")%>
      <label for="">
        <%= current_question.options[2] %>
      </label>
      <br>

      <%=check_box_tag("response[]","D")%>
      <label for="">
        <%= current_question.options[3] %>
      </label>

  <%= submit_tag("Submit",class:"btn btn-primary") %>
<%end%>
</div>
