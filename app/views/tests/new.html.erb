<h1>Create Test</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@test) do |f| %>
        <%= render 'shared/error_messages',object: f.object %>

        <div id="test_name">
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>

        <div id="test_date">
            <%= f.label :date %>
            <%= f.date_select :date %>
        </div>

        <div id="test_duration">
            <%= f.label :duration %>
            <%= f.time_select :duration %>
        </div>

        <%= f.submit "Create Test", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
