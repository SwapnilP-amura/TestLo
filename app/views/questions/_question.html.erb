<div>
    <table class="table">
      <thead>
        <tr>
            <th>Name</th>
            <th>Marks</th>
            <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @questions.each do |question| %>
              <tr>
                  <td>
                      <strong><%=question.question%></strong>
                  </td>

                  <td>
                      <%= form_tag(add_question_to_current_test_path(test_id:@test.id,question_id:question.id),remote:true,class:"form-inline") do %>
                        <div class="form-group">
                          <%=number_field_tag "marks",'1',min:'1'%>
                        </div>

                        <div class="form-group">
                          <%= submit_tag("Add",class:'btn btn-success')%>
                        </div>
                      <% end %>
                  </td>
        <!--Converted from link_to  form to passs marks to add_  -->
        <!-- <td><%= link_to "Add",add_question_to_current_test_path(test_id:@test.id,question_id:question.id),remote: true, class: 'btn btn-success'%></td> -->
              </tr>
        <%- end %>
      <!-- </tbody> -->

    <!-- </table> -->
</div>
